<h2 class="sign">Log in as Influencer
<div class="solid-sign"></div>
</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "font-weight-light" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email@email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "font-weight-light" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "abc123" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%= render "influencers/shared/links" %>
